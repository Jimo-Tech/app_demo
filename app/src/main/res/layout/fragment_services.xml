<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Services">

    <ImageView
        android:id="@+id/imagee"
        android:layout_width="450dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:src="@drawable/see" />

    <ImageView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_baseline_close_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagee"
        android:text="MegaBoss has a list of very affordable data bundles for MTN, Airtel, 9mobile and GLO. MegBoss also has a Play-to-earn inwhich people can play games on site and earn free data. we also have Affiliate program where you can earn
 free data."
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_margin="12dp"
        android:lineSpacingExtra="7dp"/>

</RelativeLayout>